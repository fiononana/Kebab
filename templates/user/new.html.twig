{% extends 'base.html.twig' %}

{% block title %}New User{% endblock %}

{% block body %}
    <h2>Create new Utilisateur</h2>

    {{ form_start(form, {'attr': {'id': 'new_edit_user'}}) }}
    {# utilisation de classes bootstrap pour la mise en forme #}
    <div class="row">
        <div class="col-12">
            {{ form_label(form.email) }}
            {{ form_widget(form.email) }}
            {{ form_errors(form.email) }}
        </div>
        <div class="col-12">
            {{ form_label(form.roles) }}
            {{ form_widget(form.roles) }}
            {{ form_errors(form.roles) }}
        </div>
        <div class="col-12">
            {{ form_label(form.password) }}
            {{ form_widget(form.password) }}
        </div>
        <div class="col-12">
            <label for="verifpass">Saisir une seconde fois le mot de passe</label>
            <input type="password" id="verifpass" required>
        </div>
    </div>
    <button class="btn btn-success">{{ button_label|default('Enregistrer') }}</button>
    {{ form_end(form) }}

    <a class="btn btn-info" href="{{ path('home') }}">Page d'acceuil</a>
{% endblock %}

